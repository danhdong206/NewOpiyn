<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_choose_language_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:text="CHOOSE LANGUAGE"
        android:textColor="@color/color_text_choose_language"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="English"
            android:textColor="@color/color_text_default"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_hindi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="52dp"
            android:text="Hindi"
            android:textColor="@color/color_text_default"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_tiengviet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="52dp"
            android:text="Tiếng Việt"
            android:textColor="@color/color_text_default"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_checked"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="52dp"
            android:background="@drawable/btn_check"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_change_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp"
        android:gravity="center"
        android:text="You can change Language anytime from settings"
        android:textColor="@color/color_text_changelanguage"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>