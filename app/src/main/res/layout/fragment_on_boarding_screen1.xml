<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_on_boarding_screen1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_title_on_boarding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="@string/title_on_boarding_0"
        android:textColor="@color/color_text"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/btn_get_in"
            android:layout_marginBottom="52dp"
            app:ci_drawable="@drawable/circleindicator_round"
            app:ci_height="3dp"
            app:ci_width="3dp" />

        <Button
            android:id="@+id/btn_get_in"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/text_terms_privacy_policy"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:background="@drawable/btn_get_in"
            android:text="Get In"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/text_terms_privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="By continuing, you agree to Opiyn's Terms and Privacy Policy"
            android:textColor="@color/color_text"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>